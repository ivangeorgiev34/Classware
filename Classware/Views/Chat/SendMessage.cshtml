@{
}

<div class="card">
	<h3 class="text-center mt-3">Send message to our admins</h3>
	<hr />
	<div class=" row mb-2" style="margin:auto; width:200px;">
		<label>Full Name:</label>
		<input class="full-name-input" placeholder="Full name..." />
		<span class="fullNameValidation"></span>
	</div>
	<div class="row mb-2" style=" margin:auto; width:200px;">
		<label>Email:</label>
		<input class="email-input" type="email" placeholder="Email..." />
		<span class="emailValidation"></span>
		<span class="emailValidationSecond"></span>
	</div>
	<div class="row mb-2" style=" margin:auto; width:200px;">
		<label>Title:</label>
		<input class="title-input" placeholder="Title..." />
		<span class="titleValidation"></span>
	</div>
	<div class="row mb-2" style=" margin:auto; width:200px;">
		<label>Description:</label>
		<textarea class="description-input" placeholder="Description..."></textarea>
		<span class="descriptionValidation"></span>
	</div>
	<div class="row mt-2 mb-2" style="margin:auto">
		<a class="btn btn-primary mb-2 sendBtn">Send</a>
	</div>
</div>

@section Scripts{
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<script src="~/js/chat.js"></script>
}

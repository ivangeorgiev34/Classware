<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Classware - Administration</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Classware.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/toastr/toastr.min.css" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
	<header>
		<partial name="_UserMessagesPartial" />
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#c2d6d6;">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="Administrator" asp-controller="Home" asp-action="Index">Classware - Administration</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
					</ul>
				</div>
			</div>
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-dark" title="Manage" asp-controller="Chat" asp-action="AllMessages">Messages</a>
				</li>
				<li class="nav-item">
					<form class="form-inline" asp-area="" asp-controller="Account" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
						<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
					</form>
				</li>
			</ul>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
	</footer>
	<script src="~/toastr/toastr.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

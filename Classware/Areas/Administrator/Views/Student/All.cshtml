@using Classware.Areas.Administrator.Models.Student;
@model ICollection< AllStudentsViewModel>

<form method="post" asp-area="Administrator" asp-controller="Student" asp-action="Delete">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th scope="col">Profile picture</th>
				<th scope="col">First name</th>
				<th scope="col">Middle name</th>
				<th scope="col">Last name</th>
				<th scope="col">Age</th>
				<th scope="col">Gender</th>
				<th scope="col">Username</th>
				<th scope="col">Class</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var student in Model)
			{
				<tr>
					@if (@student.ProfilePicture == null)
					{
						<td>No profile picture</td>
					}
					else
					{
						<td><img src="data:image;base64,@student.ProfilePicture" /></td>
					}
					<td>@student.FirstName</td>
					<td>@student.MiddleName</td>
					<td>@student.LastName</td>
					<td>@student.Age</td>
					<td>@student.Gender</td>
					<td>@student.Username</td>
					@if (@student.Class == null)
					{
						<td>No class</td>
					}
					else
					{
						<td>@student.Class</td>
					}
					<td><button class="btn btn-danger" asp-area="Administrator" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</button></td>
				</tr>
			}
		</tbody>
	</table>
</form>
@using Classware.Areas.Administrator.Models.Class;
@model AddClassViewModel

<form class="row" method="post" asp-action="Add" asp-controller="Class" asp-area="Administrator" asp-antiforgery="true">
	<div class="card">
		<h3 class="mt-3" style="text-align:center">Add class</h3>
		<hr />
		<div class="row mb-3" style="margin:auto">
			<label asp-for="@Model.Name">Class name:</label>
			<input placeholder="Class name..." asp-for="@Model.Name" />
		</div>
		<div>
			<ul style="list-style-type:none">
				@foreach (var error in ViewContext.ViewData.ModelState.Values.SelectMany(v => v.Errors))
				{
					<li>
						<span class="text-danger">@error.ErrorMessage</span>
					</li>
				}
				<li>
					<span class="text-danger" asp-validation-for="@Model.Name"></span>
				</li>
			</ul>
		</div>
		<div class="row mb-3" style="margin:auto">
			<button class="btn btn-success" asp-area="Administrator" asp-controller="Class" asp-action="Add">Create</button>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}

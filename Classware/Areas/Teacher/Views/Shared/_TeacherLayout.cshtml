<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Classware - Administration</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Classware.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/toastr/toastr.min.css" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
	<header>
		<partial name="_UserMessagesPartial" />
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #99ccff;">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="Teacher" asp-controller="Home" asp-action="Index">Classware - Teachers</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
			</div>
			<div class="dropdown">
				<a class=" nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false" style="color:black">Classes</a>
				<ul class="dropdown-menu">
					<li><a asp-area="Teacher" asp-controller="Class" asp-action="All" class="dropdown-item">All classes</a></li>
				</ul>
			</div>
			<div class="dropdown">
				<a class=" nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false" style="color:black">Grades</a>
				<ul class="dropdown-menu">
					<li><a asp-area="Teacher" asp-controller="Grade" asp-action="Add" class="dropdown-item">Add a grade</a></li>
				</ul>
			</div>
			<div class="dropdown">
				<a class=" nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false" style="color:black">Compliments</a>
				<ul class="dropdown-menu">
					<li><a asp-area="Teacher" asp-controller="Compliment" asp-action="Add" class="dropdown-item">Add a compliment</a></li>
				</ul>
			</div>
			<div class="dropdown">
				<a class=" nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false" style="color:black">Remarks</a>
				<ul class="dropdown-menu">
					<li><a asp-area="Teacher" asp-controller="Remark" asp-action="Add" class="dropdown-item">Add a remark</a></li>
				</ul>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link text-dark" title="Manage" asp-area="Teacher" asp-controller="Profile" asp-action="ProfileInformation">Profile</a>
					</li>
					<li class="nav-item">
						<form class="form-inline" asp-area="" asp-controller="Account" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
							<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
						</form>
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
	</footer>
	<script src="~/toastr/toastr.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
